
extends layout.pug

block content
   h1= title
   if(errors)
        h2.error An error has occurred! Sorry!
        ul.error
          each error in errors
           li
             =error.message

   form(action="/books/" + book.id , method="post")
     p
       label(for='title') Title
       input#title(name='title', type='text', value=title)
     p
       label(for='author') Author
       input#author(name='author', type='text', value=author)
     p
       label(for='genre') Genre
       input#genre(name='genre', type='text', value=genre)
     p
       label(for='year') Year
       input#year(name='year', type='text', value=year)
     p
       input(type='submit', value='Update Book')
   form(action="/books/" + book.id + "/delete", method="post", onsubmit="return confirm('Do you really want the book requested?');")
     p
       a.button(href='/books') Cancel
     p
       input(type='submit', value='Delete Book')


    





